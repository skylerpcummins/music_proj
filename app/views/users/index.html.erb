<% if current_user %>
<h1>Current User: <%= current_user.email %> </h1>
<% else %>
<h1>No current user</h1>
<% end %>

<% unless current_user %>
<%= button_to "Login", new_session_url, method: :get  %>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
<br>

<%= button_to "Sign Up", new_user_url, method: :get %>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >

<% end %>
